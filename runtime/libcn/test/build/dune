(rule
 (target Makefile)
 (deps
  (file ../CMakeLists.txt))
 (action
  (run cmake ..)))

(rule
 (target libcn_tests)
 (deps
  (file Makefile)
  (glob_files ../bennet/*.hpp)
  (glob_files ../bennet/*.cpp))
 (action
  (run make)))

(rule
 (alias runtest)
 (deps
  (package cn)
  (file libcn_tests))
 (action
  (setenv
   UBSAN_OPTIONS
   "halt_on_error=1"
   (setenv
    ASAN_OPTIONS
    "allocator_may_return_null=1:detect_leaks=0"
    (run ./libcn_tests)))))
